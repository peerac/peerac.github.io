---
let current_year = new Date().getFullYear();
---

<footer class="footer">
    <div class="container">
      <div>
        <p>
          For more details information, please contact me at <a href="mailto:m.rezazulman@gmail.com">m.rezazulman@gmail.com</a>
        </p>
      </div>
      <div>
        <h4>Peerac - {current_year}</h4>
      </div>
    </div>
  </footer>
  
  <style>
    p {
      font-size: small;
    }

    .email {
      color: #9dff41;
    }

    .footer {
      background: var(--color-primary);
      color: #fff;
      text-align: center;
      padding: 20px;
      margin-top: 60px;
    }
  
    .footer .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
  
    .footer a {
      color: #92e064;
    }
  
    .footer a:hover {
      text-decoration: underline;
    }
  
    .footer h3 {
      margin-bottom: 10px;
    }
  
    .footer div:nth-child(1) {
      text-align: left;
    }
  
  
    @media (max-width: 500px) {
      .footer div:nth-child(2) {
        display: none;
      }
    }
  </style>